	<distributionManagement>
		<repository>
			<id>central</id>
			<name>idetools-libs-release</name>
			<url>https://artifactory.adv.evoforge.org/artifactory/idetools-libs-release/</url>
		</repository>
		<snapshotRepository>
			<id>snapshots</id>
			<name>idetools-libs-snapshot</name>
			<url>https://artifactory.adv.evoforge.org/artifactory/idetools-libs-snapshot/</url>
		</snapshotRepository>
	</distributionManagement>
	<profiles>
		<profile>
			<id>snapshot</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<snapshot>-SNAPSHOT</snapshot>
			</properties>
		</profile>
		<profile>
			<id>release</id>
			<properties>
				<snapshot></snapshot>
			</properties>
		</profile>
	</profiles>
</project>
